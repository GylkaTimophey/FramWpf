<Window x:Class="FramWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoderCADUI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:LineListVM x:Key="VM"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <ItemsControl x:Name="Control1" ItemsSource="{Binding lineListVM}" Margin="10,10.2,9.6,9.6" Grid.Row="1">
            <ItemsControl.DataContext>
                <local:LineListVM/>
            </ItemsControl.DataContext>
            <ItemsControl.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding LeftClick}"/>
            </ItemsControl.InputBindings>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas x:Name="WorkSpace" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}" Height="Auto" MouseRightButtonDown="WorkSpace_MouseRightButtonDown">
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <!--<ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Line Fill="{Binding lineListVM, Converter={StaticResource VM}}" Width="25" Height="25" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>-->
            <!-- пригодится чуть позже
            <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Top" Value="{Binding Path=Y}" />
                        <Setter Property="Canvas.Left" Value="{Binding Path=X}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>-->
        </ItemsControl>
    </Grid>
</Window>
